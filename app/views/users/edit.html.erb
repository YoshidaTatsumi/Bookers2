<div class="body">
	<div class="container">
		<h2>User info</h2>
		<% if @user.errors.any? %>
			<h2><%= @user.errors.count %>件のエラーが発生しました</h2>
			<ul>
				<% @user.errors.full_messages.each do |message| %>
					<li><%= message %></li>
				<% end %>
			</ul>
		<% end %>
		<%= form_for(@user) do |f| %>
			<div class="field">
				<label>Name</label>
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<h4>Image</h4>
				<%= f.attachment_field :profile_image %>
			</div>
			<div class="field">
				<h4>Introduction</h4>
				<%= f.text_area :introduction %>
			</div>
			<div class="field">
				<%= f.submit "Update User" %>
			</div>
		<% end %>
	</div>
</div>