<% if @book.errors.any? %>
	<div class="error_explanation">
		<h2><%= @book.errors.count %>
			errors prihibited this obj from being saved:</h2>
		<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
		</ul>
	</div>
<% end %>
<main class="clearfix">
<div class="sidebar">
	<div class="user">
		<h1>User info</h1>
		<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
		<%= @user.name %>
		<%= @user.introduction %>
		<%= link_to "ユーザー編集", edit_user_path(current_user.id) %>
	</div>
	<div class="new-book">
		<h2>New Book</h2>
		<%= form_for(@book, url: books_path) do |f| %>
			<div>
				<div>
					<label>Title</label>
					<%= f.text_field :title %>
				</div>
				<div>
					<label>Opinion</label>
					<%= f.text_area :body %>
				</div>
				<div>
					<%= f.submit "Create Book" %>
				</div>
			</div>
		<% end %>
	</div>
</div>
<div class="user-detail">
	<h1>Users</h1>
	<table>
		<tr>
			<th>image</th>
			<th>name</th>
			<th colspan="1"></th>
		</tr>
		<% @users.each do |user| %>
			<tr>
				<td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %></td>
				<td><%= user.name %></td>
				<td><%= link_to "Show", user_path(user) %></td>
			</tr>
		<% end %>
	</table>
</div>
</main>