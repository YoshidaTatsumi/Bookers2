<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
				<table class="table">
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</table>
				<div class="row">
					<%= link_to "", edit_user_path(current_user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
				</div>

				<h2>New book</h2>
				<%= form_for(@book, url: books_path) do |f| %>
					<div class="field row">
						<label>Title</label>
						<%= f.text_field :title, class:"col-xs-12" %>
					</div>
					<div class="field row">
						<label>Opinion</label>
						<%= f.text_area :body, class:"col-xs-12" %>
					</div>
					<div class="field row">
						<%= f.submit "Create Book", class:"col-xs-12 btn btn-primary" %>
					</div>
				<% end %>
			</div>
			<div class="col-xs-9">
				<h2>Users</h2>
				<table class="table">
					<thead>
						<tr>
							<th>image</th>
							<th>name</th>
							<th colspan="1"></th>
						</tr>
					</thead>
					<tbody>
						<% @users.each do |user| %>
							<tr>
								<td>
									<%= link_to user_path(user.id) do %>
										<%= attachment_image_tag user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
									<% end %>
								<td><%= user.name %></td>
								<td><%= link_to "Show", user_path(user) %></td>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>