<div class="body">
	<div class="container">
		<% if flash[:notice] %>
			<div class="flash">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
				<table class="table">
					<tr></tr>
					<tr>
						<th>name</th>
						<th><%= @user.name %></th>
					</tr>
					<tr>
						<th>introduction</th>
						<th><%= @user.introduction %></th>
					</tr>
				</table>
				<div class="row">
					<%= link_to "", edit_user_path(@user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
				</div>
				<h2>New book</h2>
				<%= form_for(@book, url: books_path) do |f| %>
					<div class="field row">
						<label>Title</label>
						<%= f.text_field :title, class:"col-xs-12" %>
					</div>
					<div class="field row">
						<label>Opinion</label>
						<%= f.text_area :body, class:"col-xs-12" %>
					</div>
					<div class="field row">
						<%= f.submit "Create Book", class:"col-xs-12 btn btn-primary" %>
					</div>
				<% end %>
			</div>
			<div class="col-xs-9">
				<h1>Books</h1>
		<div>
			<table class="table">
				<thead>
					<tr>
						<th colspan="1"></th>
						<th>Title</th>
						<th>Opinion</th>
						<th></th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
						<tr>
							<td>
								<%= link_to user_path(@user.id) do %>
									<%= attachment_image_tag @user, :profile_image, :fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
								<% end %>
							</td>
							<td>
								<%= link_to book_path(book.id) do %>
								<%= book.title %>
								<% end %>
							</td>
							<td><%= book.body %></td>
							<td>
								コメント数：<%= book.book_comments.count %>
							</td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</div>
</div>