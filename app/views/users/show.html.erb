<div class="body">
	<div class="container">
		<% if flash[:notice] %>
			<div class="flash">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= render 'info', user: @user%>

				<h2>New book</h2>
				<%= render 'books/new', book: @book%>

			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
				<%= render 'books/index', books: @books%>
			</div>
		</div>
	</div>
</div>