<div class="body">
	<div class="container">
		<div class="row">
			<div class="col-xs-6 col-xs-offset-3">
				<h1>Editing Book</h1>
				<% if @book.errors.any? %>
					<div class="error-message">
						<h3><%= @book.errors.count %>
							 error prohibited this obj from being saved:
						</h3>
						<ul>
							<% @book.errors.full_messages.each do |message| %>
							<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				<%= form_for(@book) do |f| %>
					<div class="row field">
		 				<h4>Title</h4>
						<%= f.text_field :title, class:"col-xs-12" %>
					</div>
					<div class="row field">
			 			<h4>Opinion</h4>
						<%= f.text_area :body, class:"col-xs-12" %>
					</div>
					<div class="row field">
						<%= f.submit "Update Book", class:"col-xs-12 btn btn-primary" %>
					</div>
				<% end %>
				<%= link_to "Show", book_path(@book) %>
				<span>|</span>
				<%= link_to "Back", books_path %>
			</div>
			<div class="col-xs-3"></div>
		</div>
	</div>
</div>