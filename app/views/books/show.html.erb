<div class="body">
	<div class="container">
		<% if flash[:notice] %>
			<div class="flash">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= render 'users/info', user: @user%>

				<h2>New book</h2>
				<%= render 'books/new', book: @book%>
				
			</div>
			<div class="col-xs-9">
				<h1>Book detail</h1>
				<table class="table">
					<tr>
						<td>
							<%= link_to user_path(@user.id) do %>
								<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %><br>
								<%= @user.name %>
							<% end %>
						</td>
						<td><%= @books.title %></td>
						<td><%= @books.body %></td>
						<td>
							<% if @books.favorited_by?(current_user) %>
								<%= link_to book_favorites_path(@books), method: :delete do %>
							      <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
							      <%= @books.favorites.count %> いいね
							    <% end %>
							<% else %>
								<%= link_to book_favorites_path(@books), method: :post do %>
								      <i class="fa fa-heart-o" aria-hidden="true"></i>
								      <%= @books.favorites.count %> いいね
								<% end %>
							<% end %>
						</td>
						<td>コメント数:
							<%= @books.book_comments.count %>
						</td>
						<% if @user == current_user %>
							<td>
								<%= link_to "Edit", edit_book_path(@books.id), class:"btn-sm btn-success" %>
							</td>
							<td>
								<%= link_to "Destroy", book_path(@books), method: :delete, "data-confirm" => "本当に消しますか？", class:"btn-sm btn-danger" %>
							</td>
						<% end %>
					</tr>
				</table>
				<table>
					<% @books.book_comments.each do |book_comment| %>
						<tr>
							<td>
								<%= attachment_image_tag book_comment.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
								<%= book_comment.user.name %>
							</td>
							<td>
								<%= book_comment.comment %>
							</td>
							<% if current_user.id == book_comment.user_id %>
								<td>
									<%= link_to "Destroy", book_book_comments_path(book_comment.id), method: :delete, class:"btn-sm btn-danger" %>
								</td>
							<% end %>
						</tr>
					<% end %>
				</table>
				<% if @book_comment.errors.any? %>
					<div class="error-message">
						<h3><%= @book_comment.errors.count %>
							 error prohibited this obj from being saved:
						</h3>
						<ul>
							<% @book_comment.errors.full_messages.each do |message| %>
								<li><%= message %></li>
							<% end %>
						</ul>
					</div>
				<% end %>
				<%= form_for [@books, @book_comment] do |f| %>
					<div class="row">
						<div class="col-xs-10">
							<%= f.text_area :comment, rows:'5', class: "form-control" %>
						</div>
						<div class="col-xs-2" style="margin-top: 90px;">
							<%= f.submit "送信", class: "pull-left" %>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	</div>
</div>
