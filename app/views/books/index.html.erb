<div class="header">
	<h1>Bookers</h1>
	<ul>
	<% if user_signed_in? %>
		<li>Home</li>
		<li>Users</li>
		<li>Books</li>
		<li>logout</li>
	<% else %>
		<li>Home</li>
		<li>About</li>
		<li>sign up</li>
		<li>login</li>
	<% end %>
	</ul>
</div>
<% if @book.errors.any? %>
	<h2><%= @book.errors.count %>件のエラーが発生しました</h2>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<div class="sidebar">
	<div class="user">
		<h1>User info</h1>
		<img>
		<p>name:username</p>
		<p>introduction</p>
		<p>編集ボタン</p>
	</div>
	<div class="new-book">
		<h2>New Book</h2>
		<%= form_for(@book, url: books_path) do |f| %>
			<div>
				<div>
					<label>Title</label>
					<%= f.text_field :title %>
				</div>
				<div>
					<label>Opinion</label>
					<%= f.text_area :body %>
				</div>
				<div>
					<%= f.submit "Create Book" %>
				</div>
			</div>
		<% end %>
	</div>
</div>
<div class="book-detail">
	<h1>Book detail</h1>
	<table>
		<tr>
			<th colspan="1"></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
		<% @books.each do |book| %>
			<tr>
				<td>投稿者</td>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</table>
</div>



