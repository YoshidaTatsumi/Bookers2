<div class="body">
	<div class="container">
		<% if @book.errors.any? %>
			<div class="error-message">
				<h3><%= @book.errors.count %>
					 error prohibited this obj from being saved:
				</h3>
				<ul>
					<% @book.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</div>
		<% end %>
		<% if flash[:notice] %>
			<div class="flash">
				<%= flash[:notice] %>
			</div>
		<% end %>
		<div class="row">
			<div class="col-xs-3">
				<h2>User info</h2>
				<%= render 'users/info', user: @user%>

				<h2>New book</h2>
				<%= render 'books/new', book: @book%>

			</div>
			<div class="col-xs-9">
				<h2>Books</h2>
					<%= render 'index', books: @books%>
			</div>
		</div>
	</div>
</div>



