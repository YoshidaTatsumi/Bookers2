<main class="clearfix">
<% if @book.errors.any? %>
	<h2><%= @book.errors.count %>件のエラーが発生しました</h2>
	<ul>
		<% @book.errors.full_messages.each do |message| %>
			<li><%= message %></li>
		<% end %>
	</ul>
<% end %>
<div class="sidebar">
	<div class="user">
		<h1>User info</h1>
		<%= attachment_image_tag @book.user, :profile_image %>
		<p>name:username</p>
		<p>introduction</p>
		<%= link_to "ユーザー編集", edit_user_path(current_user.id) %>
	</div>
	<div class="new-book">
		<h2>New Book</h2>
		<%= form_for(@book, url: books_path) do |f| %>
			<div>
				<div>
					<label>Title</label>
					<%= f.text_field :title %>
				</div>
				<div>
					<label>Opinion</label>
					<%= f.text_area :body %>
				</div>
				<div>
					<%= f.submit "Create Book" %>
				</div>
			</div>
		<% end %>
	</div>
</div>
<div class="book-detail">
	<h1>Books</h1>
	<table>
		<tr>
			<th colspan="1"></th>
			<th>Title</th>
			<th>Opinion</th>
		</tr>
		<% @books.each do |book| %>
			<tr>
				<td>投稿者</td>
				<td><%= link_to book_path(book.id) do %>
					<%= book.title %>
					<% end %>
				</td>
				<td><%= book.body %></td>
			</tr>
		<% end %>
	</table>
</div>
</main>



